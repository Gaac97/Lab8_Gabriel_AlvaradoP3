#include <string>
#include <vector>


using std::string;

#ifndef PERSONA_H
#define PERSONA_H
class Persona{
	protected:
		string Nombre;
		string Genero;
		string ColorCabello;
		string ColorOjos;
		string ColorPiel;
		bool Fertil;
	public:
		Persona(string,string,string,string,string,bool);
		Persona();
		
	
		string getNombre();
		void setNombre(string);

		string getGenero();
		void setGenero(string);

		string getColorCabello();
		void setColorCabello(string);

		string getColorOjos();
		void setColorOjos(string);

		string getColorPiel();
		void setColorPiel(string);

		bool getFertil();
		void setFertil(bool);
		
		//Metodos sobrecargados
		Persona* operator+(Persona& );
		Persona* operator*(Persona& p);

};
#endif